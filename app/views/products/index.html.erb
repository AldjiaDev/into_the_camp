<h1>Mes Produits</h1>

<% if @products.any? %>
  <ul>
    <% @products.each do |product| %>
      <li>
        <%= link_to product.name, product %> - <%= product.price_per_day %> €
        <%= link_to 'Modifier', edit_product_path(product) %>
        <%= link_to 'Supprimer', product_path(product), method: :delete, data: { confirm: 'Êtes-vous sûr ?' } %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>Aucun produit ajouté pour le moment.</p>
<% end %>

<%= link_to 'Ajouter un nouveau produit', new_product_path %>

