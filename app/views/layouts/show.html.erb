<h2>Profil de <%= @user.name %></h2>
<p>Email: <%= @user.email %></p>
<p>Rôle: <%= @user.role %></p>

<%= link_to "Modifier", edit_user_path(@user), class: "btn btn-primary" %>
<%= link_to "Supprimer mon compte", user_path(@user), method: :delete, data: { confirm: "Es-tu sûr de vouloir supprimer ton compte ?" }, class: "btn btn-danger" %>
